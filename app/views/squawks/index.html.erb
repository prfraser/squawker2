<p id="notice"><%= notice %></p>

<h1>Squawks</h1>


<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @squawks.each do |squawk| %>
      <tr>
        <td><%= squawk.content %></td>
        <td><%= squawk.user.email %></td>
        <td><%= link_to 'Show', squawk %></td>
        <td><%= link_to 'Edit', edit_squawk_path(squawk) %></td>
        <td><%= link_to 'Destroy', squawk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form', squawk: @squawk %>


